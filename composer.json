{
    "name": "nextsms/php-client",
    "description": "NextSMS PHP SDK",
    "keywords": [
        "api",
        "sdk",
        "nextsms",
        "sms",
        "bulk sms",
        "tanzania"
    ],
    "homepage": "https://github.com/nextsms/php-client",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Alpha Olomi",
            "email": "alphaolomi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.3",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "NextSMS\\SDK\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NextSMS\\SDK\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes  --config .php_cs.dist.php"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
